
##Stand-alone mode enable
basic_mode=true

## Manager databases
manager_datastore_url=jdbc:sqlite:managerStorage.db
instance_datastore_urljdbc:sqlite:federatedInstance.db
storage_datastore_url=jdbc:sqlite:federatedStorage.db
